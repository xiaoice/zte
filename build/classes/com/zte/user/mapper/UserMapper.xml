<?xml version="1.0" encoding="UTF-8" ?> 
    <!DOCTYPE mapper 
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zte.user.mapper.UserMapper">
	
	<insert id="insert" parameterType="com.zte.user.domain.User" useGeneratedKeys="true" keyProperty="id">
		insert into user(username,password,name,photo,age) values(#{username},#{password},#{name},#{photo},#{age})
    </insert>
    
	<select id="getById" resultType="com.zte.user.domain.User" parameterType="int">
		select * from user where id=#{id} 
    </select>
    
    <update id="update" parameterType="com.zte.user.domain.User">
    	update user set age=#{age}
    </update>
    
    <delete id="deleteById" parameterType="int" >
    	delete from user where id=#{id}
    </delete>
    
    <!-- 根据用户名、密码登录 -->
	<select id="findUserByUsernameAndPwd" resultType="com.zte.user.domain.User" parameterType="hashMap">
		select * from user where username=#{username} and password=#{password}
    </select>

	<!-- 当使用该Mybatis与Spring整合的时候，该文件必须和相应的Mapper接口文件同名，并在同一路径下 -->
</mapper> 